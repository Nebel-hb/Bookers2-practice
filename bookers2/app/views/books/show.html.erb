<%= render 'books/sideber', user: @book.user, book: @book_new %>

<div class="book-body">

<h1>Book detail</h1>
  <p><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <%= link_to user_path(@book.user.id) do %>
  <p><%= @book.user.name %></p>
  <% end %>
  <%= link_to book_path(@book.id) do %>
    <p><%= @book.title %></p>
  <% end %>
  <p><%= @book.body %></p>
  

  
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
   <p>&nbsp;|&nbsp;</p>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>

</div>